@using ChefsnDishes.Models;
@model Dish;

<div class="container w-75 mx-auto">
    <h1 class="mb-4">Add a Dish!</h1>
    <a href="/dishes">Home</a>
    <form asp-action="CreateDish" asp-controller="Dish" method="post">
        <span asp-validation-for="Name"></span>
        <div class="formline mb-3">
            <label asp-for="Name"></label>
            <input class="form-control-sm" asp-for="Name">
        </div>
        <span asp-validation-for="Calories"></span>
        <div class="formline mb-3">
            <label asp-for="Calories"></label>
            <input class="form-control-sm" asp-for="Calories">
        </div>
        <span asp-validation-for="Description"></span>
        <div>
            <label asp-for="Description"></label>
            <div>
                <textarea asp-for="Description" cols="45" rows="8"></textarea>
            </div>
        </div>
        <span asp-validation-for="ChefId"></span>
        <div class="formline mb-3">
            <label asp-for="ChefId"></label>
            <select asp-for="ChefId" class="form-control-sm">
                <option hidden disabled selected></option>
                @foreach(Chef chef in ViewBag.AllChefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select>
        </div>
        <span asp-validation-for="Tastiness"></span>
        <div class="formline mb-3">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-control-sm">
                <option hidden disabled selected></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <button class="btn btn-outline-dark" type="submit">Add Dish</button>
    </form>
</div>